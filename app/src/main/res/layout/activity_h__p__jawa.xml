<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/background"
    tools:context=".H_P_Jawa">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/myriadpro"
        android:text="Rumah Adat Pulau Jawa"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rumahadat1"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/pj1_badakheuay_jabar"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/rumahadat2"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/pj8_kebaya_jakarta"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="180dp"/>



            <Button
                android:id="@+id/rumahadat3"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/pj11_rumahjoglo_jateng"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat4"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/pj16_bangsalkecono_jogja"

                android:layout_marginTop="120dp"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat5"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/pj17_badui_banten"

                android:layout_marginTop="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat6"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/pj18_joglo_jatim"

                android:layout_marginTop="230dp"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>




        </RelativeLayout>
    </ScrollView>


</RelativeLayout>