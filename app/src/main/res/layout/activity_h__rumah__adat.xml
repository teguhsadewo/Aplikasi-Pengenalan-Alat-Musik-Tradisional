<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/background"
    tools:context=".H_Rumah_Adat">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/myriadpro"
        android:text="Jenis Rumah Adat"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/pulausumatera"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/buttonbk"
        android:textColor="@color/white"
        android:text="Pulau Sumatera"
        android:textSize="25dp"
        android:fontFamily="@font/bebas"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="239dp"/>

    <Button
        android:id="@+id/pulaujawa"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/buttonbk"
        android:textColor="@color/white"
        android:text="pulau jawa"
        android:textSize="25dp"
        android:fontFamily="@font/bebas"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="239dp"/>

</RelativeLayout>