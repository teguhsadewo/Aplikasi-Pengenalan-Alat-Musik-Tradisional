                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat8"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/ps13_rumahjambi_jambi"

                android:layout_marginTop="340dp"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat9"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/ps14_adatriau_riau"

                android:layout_marginTop="450dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat10"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/ps15_belahbubung_kepriau"

                android:layout_marginTop="450dp"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="10dp"
