                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat4"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/ps7_rumahlimas_sumsel"

                android:layout_marginTop="120dp"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat5"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/ps10_rakitlimat_bangkabelitung"

                android:layout_marginTop="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rumahadat6"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/ps11_bumbunglima_bengkulu"

                android:layout_marginTop="230dp"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>


            <Button
                android:id="@+id/rumahadat7"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:background="@drawable/ps12_sesatbalaiagung_lampung"

